@using (Html.BeginForm("Edit", "Products", FormMethod.Post,
    new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary(true, "", new { @class = "Text-danger"})
    @Html.HiddenFor(model => model.ProductID)
