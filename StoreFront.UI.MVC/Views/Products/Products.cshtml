@{
    ViewBag.Title = "Products";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col">
        <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
            @foreach (var item in Model)
            {
                <div class="product-item men">
                    <div class="product discount product_filter">
                        <div class="product_image">
                            <img @Html.DisplayFor(modelItem => item.ProductImage)/>
                        </div>
                        <div class="favorite favorite_left"></div>
                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>@Html.DisplayFor(modelItem => item.Price)</span></div>
                        <div class="product_info">
                            <h6 class="product_name"><a @Html.ActionLink("Details", "Details", new { id = item.ProductID })>@Html.DisplayFor(modelItem => item.ProductName)</a></h6>
                            <div class="product_price">@Html.DisplayFor(modelItem => item.Price)</div>
                        </div>
                    </div>
                    <div class="red_button add_to_cart_button"><a href="#">add to cart</a></div>
                </div>
            }
        </div>
    </div>
</div>

